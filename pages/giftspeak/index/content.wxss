page {
  height: 100%; }
  page .container {
    height: 100%;
    width: 100%; }
    page .container .header {
      display: none;
      height: 44px;
      width: 100%;
      background: #fff;
      position: absolute;
      top: 0;
      z-index: 1;
      background: snow; }
    page .container .content {
      position: relative;
      height: 100%;
      width: 100%;
      display: flex;
      flex-direction: column; }
      page .container .content scroll-view {
        flex: 1;
        width: 100%;
        overflow: hidden; }
        page .container .content scroll-view .top {
          width: 100%;
          height: 160px; }
          page .container .content scroll-view .top image {
            width: 100%;
            height: 100%; }
        page .container .content scroll-view .h2 {
          width: 100%;
          padding: 10px;
          font-size: 16px;
          font-weight: 600;
          color: #333;
          text-align: center; }
        page .container .content scroll-view,
        page .container .content scroll-view .html {
          width: 100%;
          box-sizing: border-box;
          padding: 0 2%; }
          page .container .content scroll-view view,
          page .container .content scroll-view .html view {
            font-size: 14px;
            line-height: 20px;
            color: #999;
            padding: 5px 0 12px 0; }
          page .container .content scroll-view image,
          page .container .content scroll-view .html image {
            width: 100%;
            height: 160px; }
      page .container .content .footer {
        height: 40px;
        display: flex;
        width: 100%;
        justify-content: space-between;
        box-sizing: border-box;
        padding: 5px 0; }
        page .container .content .footer view {
          width: 33.333%;
          height: 100%;
          line-height: 30px;
          text-align: center;
          font-size: 14px;
          color: #888; }
          page .container .content .footer view image {
            padding: 5px 0;
            width: 20px;
            height: 20px;
            vertical-align: middle; }
          page .container .content .footer view text {
            display: inline-block;
            height: 20px;
            line-height: 20px;
            padding: 5px; }
