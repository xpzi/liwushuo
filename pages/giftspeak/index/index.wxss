page{
    height: 100%;
}
.container{
    width:100%;
    height:100%;
}
.top{
    display:flex;
    height:44px;
    width:100%;
    padding:0 10px;
    box-sizing:border-box ;
    align-items: center;
}
.top .logo{
    height:20px;
    width:80px;
    
}
.top .logo image{
    width:100%;  
    height: 100%; 
}

.top .forma{
    flex:1;
    margin:0 10px;
    height:30px;
    line-height:30px;
    border-radius:30px;
    background:#FEEEF5;
    text-align:center;
    font-size:16px;
    color: #C0C0C0;
}
.top .forma image{
   width: 16px;
   height: 16px;
   margin-bottom:-2px;
   padding:0 2px;
    
}

.top .time{
    height:24px;
    width:24px;
}
.top .time image{
    width:100%;  
    height: 100%; 
}



.nav{
    height: 44px;
    background: #FAFAFA;
    border-bottom: 1px solid #CCCCCC;
    white-space: nowrap;
    line-height: 44px;
    width:100%;
    overflow: hidden;
}
.nav scroll-view{
    width:100%;
    height:60px;
}
.nav .active{
    color:#ff5555;
    background: #ffdddd;
}
.nav text{
    padding: 0 20px;
    color:#999;
    font-size: 14px;
}

.pageview{
    width:100%;
    flex:1;
    height: 0;
}
.pageviewitem{
    width:100%;
    height: 100%;
}

.mianscroll{
    width:100%;
    height: 100%;
    overflow: hidden;
    position: relative;
}
.pullrefresh{
    height:40px;
    line-height: 40px;
    background: #FFFFFF;
    text-align: center;
}
.listview{
    background: #ccc;
    box-sizing: border-box;
    position: relative;
}
.listbox{
    padding:15px;
    background: #ffffff;
    box-sizing: border-box; 
    margin:0 0 15px 0;
}

.listbox image{
    width:100%;
}
.listbox .h3{
    font-size: 16px;
    color:#333;
    line-height: 24px;
    font-weight: 600;
    padding:10px 0;
}
.listbox .p{
    line-height: 20px;
    font-size: 14px;
    color:#999;
    padding: 10px 0;
}
.listbox .info{
    border-top: 1px solid #ccc ;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 30px;
    font-size: 12px;
    color:#999;
}
.listbox .info b{
    color:#666;
    padding:0 8px;
}
.listbox .info i{
    width:14px;
    height:14px;
    margin: 0px 5px -3px 0px;
    display: inline-block;
    background: url("/res/drawable-xxhdpi-v4/icon_post_favourite_gray.png");
    background-size: 14px 14px; 
}
.listbox .info .right{
    color:#666;
}

.swiperbanner{
    height: 200px;
    width: 100%;
}
.swiperbanner image{
    width: 100%;
}
